{
  "name": "knowder",
  "version": "1.0.0",
  "description": "A lightweight JavaScript library for displaying engaging facts during loading states",
  "main": "dist/knowder.umd.js",
  "module": "dist/knowder.esm.js",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:performance": "jest test/performance.test.js",
    "test:accessibility": "jest test/accessibility.test.js",
    "test:browser": "playwright test",
    "test:all": "npm run test && npm run test:performance && npm run test:accessibility && npm run test:browser",
    "lint": "eslint src/**/*.js test/**/*.js",
    "lint:fix": "eslint src/**/*.js test/**/*.js --fix",
    "size": "bundlesize",
    "prepare": "husky install"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/data/defaultFacts.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ]
  },
  "bundlesize": [
    {
      "path": "./dist/knowder.esm.js",
      "maxSize": "5 kB"
    }
  ],
  "keywords": [
    "loading",
    "facts",
    "trivia",
    "loading-state",
    "ux"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-visualizer": "^5.9.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "bundlesize": "^0.18.1",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.2",
    "playwright": "^1.34.0",
    "prettier": "^2.8.8",
    "rollup": "^3.25.0",
    "rollup-plugin-visualizer": "^5.9.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
